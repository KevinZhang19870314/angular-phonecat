{
    "compileOnSave": true,
    "compilerOptions": {
        // "outDir": "dist",
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
        // "typeRoots": [
        //     "node_modules/@types"
        // ]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}